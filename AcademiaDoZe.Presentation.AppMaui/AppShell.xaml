<?xml version="1.0" encoding="UTF-8" ?>
<Shell
     x:Class="AcademiaDoZe.Presentation.AppMaui.AppShell"
     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     xmlns:views="clr-namespace:AcademiaDoZe.Presentation.AppMaui.Views"
     Title="Academia do Isaque">

    <FlyoutItem Title="Dashboard">
        <FlyoutItem.Icon>
            <FontImageSource 
            FontFamily="MaterialIcons" 
            Glyph="&#xe871;" Size="24"
            Color="{AppThemeBinding Light={StaticResource MidnightBlue},Dark={StaticResource White}}" />
        </FlyoutItem.Icon>
        <ShellContent ContentTemplate="{DataTemplate views:DashboardListPage}" Route="dashboard" />
    </FlyoutItem>
    <FlyoutItem Title="Logradouros">
        <FlyoutItem.Icon>
            <FontImageSource 
                FontFamily="MaterialIcons" 
                Glyph="&#xe567;" Size="24"
                Color="{AppThemeBinding Light={StaticResource MidnightBlue},Dark={StaticResource White}}" />
        </FlyoutItem.Icon>
        <ShellContent ContentTemplate="{DataTemplate views:LogradouroListPage}" Route="logradouros" />
    </FlyoutItem>
    <FlyoutItem Title="Configurações">
        <FlyoutItem.Icon>
            <FontImageSource 
                FontFamily="MaterialIcons" 
                Glyph="&#xe85d;" Size="24"
                Color="{AppThemeBinding Light={StaticResource MidnightBlue},Dark={StaticResource White}}" />
        </FlyoutItem.Icon>
        <ShellContent ContentTemplate="{DataTemplate views:ConfigPage}" Route="configuracoes"/>
    </FlyoutItem>
    <FlyoutItem Title="Colaboradores">
        <FlyoutItem.Icon>
            <FontImageSource 
                FontFamily="MaterialIcons" 
                Glyph="&#xe7fd;" Size="24"
                Color="{AppThemeBinding Light={StaticResource MidnightBlue},Dark={StaticResource White}}" />
        </FlyoutItem.Icon>
        <ShellContent ContentTemplate="{DataTemplate views:ColaboradorListPage}" Route="colaboradores" />
    </FlyoutItem>
    <FlyoutItem Title="Aluno">
        <FlyoutItem.Icon>
            <FontImageSource 
                FontFamily="MaterialIcons" 
                Glyph="&#xea34;" Size="24"
                Color="{AppThemeBinding Light={StaticResource MidnightBlue},Dark={StaticResource White}}" />
        </FlyoutItem.Icon>
        <ShellContent ContentTemplate="{DataTemplate views:AlunoListPage}" Route="alunos" />
    </FlyoutItem>
    <FlyoutItem Title="Matriculas">
        <FlyoutItem.Icon>
            <FontImageSource 
            FontFamily="MaterialIcons"
            Glyph="&#xf02f;"
            Size="26"
            Color="{AppThemeBinding Light={StaticResource MidnightBlue},
                                    Dark={StaticResource White}}" />
        </FlyoutItem.Icon>

        <ShellContent 
        ContentTemplate="{DataTemplate views:MatriculaListPage}" 
        Route="matriculas" />
    </FlyoutItem>
</Shell>